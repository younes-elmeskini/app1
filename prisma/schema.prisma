generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model users {
  id       String   @id @default(uuid())
  name     String
  email    String   @unique
  password String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deleted   DateTime?
  note     notes[]
}

model notes {
  id          String   @id @default(uuid())
  name        String
  content     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  deleted     DateTime?
  userId      String
  user        users     @relation(fields: [userId], references: [id])
  categoryId  String
  category    categories @relation(fields: [categoryId], references: [id])
  tagNotes tagNotes[]
}

model categories {
  id       String   @id @default(uuid())
  name     String
  note    notes[]
}

model tags {
  id  String   @id @default(uuid())
  name String  
  tagnote tagNotes[]  
}

model tagNotes {
  id        String   @id @default(uuid())
  noteId    String
  tagId     String
  note      notes    @relation(fields: [noteId], references: [id])
  tag       tags     @relation(fields: [tagId], references: [id])
  
}